{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
    "strict": true,
        "allowJs": true,
        "esModuleInterop": true,
        "jsx": "react-native",
        "lib": ["DOM", "ESNext"],
        "moduleResolution": "node",
        "noEmit": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "target": "ESNext",
        "allowSyntheticDefaultImports": true
},
    "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js"
],
    "include": [
        "nativewind-env.d.ts",
        "src/types/*.d.ts"
    ]
}